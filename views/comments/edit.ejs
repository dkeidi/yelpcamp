<%- include("../partials/header") %>

	<div class="row justify-content-center">
		<div class="col-xs-12 col-md-6 col-lg-4">
			<h1 class="h3 mb-3 font-weight-normal text-center">Edit Comment for <%= campgroundName%></h1>
			<form action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" value="<%=comment.text%>">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
				</div>
			</form>
			<a href="/campgrounds/<%=campground_id%>">Go Back</a>
		</div>
	</div>

<%- include("../partials/footer") %>