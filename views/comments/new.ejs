<%- include("../partials/header") %>

	<div class="row justify-content-center">
		<div class="col-xs-12 col-md-6 col-lg-4">
			<h1 class="h3 mb-3 font-weight-normal text-center">Add Comment to <%=campground.name%></h1>
			<form action="/campgrounds/<%=campground._id%>/comments" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" placeholder="text">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
				</div>
			</form>
			<a href="/campgrounds">Go Back</a>
		</div>
	</div>
	
<%- include("../partials/footer") %>