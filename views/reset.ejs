<%- include("./partials/header") %>

<h1 style="text-align: center;">Reset Password</h1>
<div style="width: 30%; margin: 25px auto;">
	<form action="/reset/<%= token %>" method="POST">
		<div class="form-group">
			<label for="password">New Password</label>
			<input class="form-control" type="password" name="password" placeholder="New password" autofocus>
		</div>
		<div class="form-group">
			<label for="confirm">Confirm Password</label>
			<input class="form-control" type="password" name="confirm" placeholder="Confirm password" autofocus>
		</div>		
		<div class="form-group">
			<input class="btn btn-lg btn-primary btn-block" type="submit" value="Update Password">
		</div>
	</form>
</div>

<%- include("./partials/footer") %>